<% if Hyrax.config.display_media_download_link? %>
    <div>
      <h2 class="sr-only"><%= t('hyrax.file_set.show.downloadable_content.heading') %></h2>
      <!--<%= image_tag thumbnail_url(file_set),
                    class: "representative-media",
                    alt: "",
                    role: "presentation" %>-->

      <!-- PDF.js iframe -->
      <!--<iframe  allowfullscreen webkitallowfullscreen src="<%= pdfjs.full_path(file: hyrax.download_path(file_set) + "&file=pdf") %>"></iframe>-->
      <iframe id="pdfViewer" src=<%= hyrax.download_path(file_set) + "&file=pdf" %> class="embededPDF"></iframe>

      <%= link_to hyrax.download_path(file_set) + "&file=pdf",
                  data: { turbolinks: false },
                  target: :_blank,
                  id: "file_download",
                  class: "btn btn-default btn-lg",
                  data: { label: file_set.id } do %>
        <i class="fa fa-file-pdf-o"></i>
        <%= t('hyrax.file_set.show.downloadable_content.pdf_link') %>
      <% end %>
                  
      <%= link_to hyrax.download_path(file_set),
                  data: { turbolinks: false },
                  target: :_blank,
                  id: "file_download",
                  class: "btn btn-default btn-lg",
                  data: { label: file_set.id } do %>
            <% if file_set.title.include?("docx") || file_set.title.include?("doc")%>
                <i class="fa fa-file-word-o"></i>
            <% elsif file_set.title.include?("xls")|| file_set.title.include?("xlsx")%>
                <i class="fa fa-file-excel-o"></i>
            <% elsif file_set.title.include?("ppt")|| file_set.title.include?("pptx")%>
                <i class="fa fa-file-powerpoint-o"></i>
            <% else %>
                <i class="fa fa-file-text"></i>
                <%= t('hyrax.file_set.show.downloadable_content.office_link') %>
            <% end %>
      <% end %>
    </div>
    
<% else %>
    <div>
      <%= image_tag thumbnail_url(file_set),
                    class: "representative-media",
                    alt: "",
                    role: "presentation" %>
    </div>
<% end %>
