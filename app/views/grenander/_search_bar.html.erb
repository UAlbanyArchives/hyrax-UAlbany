<%# form_for("search", method: :get, html: {class: 'search-query-form'}) do |f| %>
<%= form_tag search_form_action, method: :get, class: "search-query-form hyraxSearch", role: "search" do %>
    <% if params[:find].present? %>
        <% @query = params[:find] %>
    <% else %>
        <% @query = current_search_parameters %>
    <% end %>
    <%= render_hash_as_hidden_fields(search_state.params_for_search.except(:q, :search_field, :qt, :page, :utf8)) %>
    <%= hidden_field_tag :search_field, 'all_fields' %>
    <div class="input-group">

        <input name="q" id="params-q" value="<%= @query %>" placeholder="Search..." class="search_q q form-control tt-input" type="text" />
	<input type="hidden" name="search_field" id="search_field" value="all_fields" />

	<div class="input-group-btn">
		<button class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
	</div>

    </div>
<% end %>
